%h1 Edit posts
= form_for :post, url: posts_path(@post), method: :patch do |f|
  %p
    = f.label :title
    %br/
    = f.text_field(:title, {:class => 'form-control'})
  %p
    = f.label :body
    %br/
    = f.text_area(:body, {:class => 'form-control'})
  %p
    = f.submit(:class => 'btn btn-primary')
