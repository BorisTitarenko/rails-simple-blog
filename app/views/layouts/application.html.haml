!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Simpleblog
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css'
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-default
      .container
        / Brand/logo
        .navbar-header
          %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#example-1", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "#"} Site
        / Collapsible Navbar
        #example-1.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              = link_to "Home", home_path
          %ul.nav.navbar-nav.navbar-right.mr-auto
            %li
              = link_to "Create post", new_post_path
    .container
      = yield
